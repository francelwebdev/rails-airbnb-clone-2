	<div class="row">
		<div class="col-xs-12 text-center margin60">
			<h2 class="h2-reg">Your rental bookings</h2>
		</div>
	</div>

<% @rent_bookings.each do |booking| %>
	<div class="row margin40 padded40 border-top">
		<div class="col-xs-6">
			<%= link_to treehouse_path(booking.treehouse) do %>
				<%= cl_image_tag booking.treehouse.photos.first.path, class: "img-responsive", width: 500, height: 250, crop: :fill %> 
			<% end %>
		</div>
		<div class="col-xs-6 booking-info">
			<h3 class="margin0"><%= booking.treehouse.name %></h3>
					<p><strong>Check In:</strong> <%= booking.start_date %></p>
					<p><strong>Check Out:</strong> <%= booking.end_date %></p>
					<p><%= link_to "Cancel booking", booking_path(booking), method: :delete, class: "cancel-link"  %></p>
		</div>
	</div>
<% end %>

</div>



<div class="container">

	<div class="row">
		<div class="col-xs-12 text-center margin100">
			<h2 class="h2-reg">Your owner bookings</h2>
		</div>
	</div>

<% @own_bookings.each do |treehouse| %>
<%	treehouse.bookings.each do |booking| %>
	<div class="row margin40 padded40 border-top">
		<div class="col-xs-6">
		<%= link_to treehouse_path(treehouse) do %>
			<%= cl_image_tag booking.treehouse.photos.first.path, class: "img-responsive", width: 500, height: 250, crop: :fill %> 
		<% end %>
		</div>
		<div class="col-xs-6 booking-info">
			<h3 class="margin0"><%= booking.treehouse.name %></h3>
					<p><strong>Check In:</strong> <%= booking.start_date %></p>
					<p><strong>Check Out:</strong> <%= booking.end_date %></p>
			<h4>Renter info</h4>
				<p><strong>Name:</strong> <%= booking.renter.first_name %> <%= booking.renter.last_name %></p> 
				<p><strong>Email:</strong> <%= booking.renter.email %></p> 
					<p><%= link_to "Cancel booking", booking_path(booking), method: :delete, class: "cancel-link" %></p>
		</div>
	</div>
<% end %>
<% end %>

</div>




