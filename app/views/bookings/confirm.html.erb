<p><strong>Check In:</strong> <%= @booking.start_date %></p>
<p><strong>Check Out:</strong> <%= @booking.end_date %></p>
<!-- PUT THE PRICE HERE -->
<%= simple_form_for @booking do |f| %>
<%= f.input :guest_count, :collection => (1...16), selected: 1, label: "Who's coming? (Number of guests)" %>	
<%= f.hidden_field :start_date, label: "Check In" %>
<%= f.hidden_field :end_date, label: "Check Out" %>	
<%= f.hidden_field :renter_id %>	
<%= f.hidden_field :treehouse_id %>	
<%= f.submit value: "Confirm booking" %>	
<% end %>

