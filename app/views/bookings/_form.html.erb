<%= simple_form_for @booking, url: confirm_booking_path, method: 'post' do |f| %>
<%= f.input :start_date, label: "Check In",placeholder: "8/03/2017" %>
<%= f.input :end_date, label: "Check Out",placeholder: "8/15/2017" %>	
<%= f.input :guest_count, :collection => (1...16), selected: 1 %>	
<%= f.hidden_field :treehouse_id, value: @treehouse.id %>	
<div class="text-center">
	<%= f.submit class: 'btn btn-light full-width', value: "Book now" %>	
</div>
<% end %>