<div class="search-feature">
	<form action="/search" method="get" class="form-inline">
		<div class="form-group where-group">
			<label for="where">Where</label>
			<input type="text" name="treehouse[address]" id="treehouse_address_search" class="location-input"  value="<%= @address %>" placeholder="Destination, country, address">
		</div>
		<div class="form-group home-submit-button">
			<button type="submit" class="btn-big-search">
				<i class="fa fa-search"></i> Search
			</button>
		</div>
	</form>
</div>


 
<%= content_for(:after_js) do %>
 <%= javascript_include_tag "https://maps.google.com/maps/api/js?libraries=places&key=#{ENV['GOOGLE_API_BROWSER_KEY']}" %>
<% end %>