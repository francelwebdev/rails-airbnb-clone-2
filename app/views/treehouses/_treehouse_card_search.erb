
<% @treehouses.each do |treehouse| %>
	<div class="col-xs-12">
		<div class="card">
			<div class="card-img">
			<%= link_to treehouse_path(treehouse) do %>
				<% if treehouse.photos? %>
			<% treehouse.photos.each do |photo| %>
				<%= cl_image_tag photo.path, class: "img-responsive" %>
			<% end %>
				<% end %>
			<% end %>
			</div> <!-- end card-img -->
			<div class="card-description">
				<%= link_to treehouse_path(treehouse) do %>
					<strong><%= truncate treehouse.name, length: 25 %></strong>, <%= truncate treehouse.address, length: 15 %>
					<ul class="stars">
						<li>
							<i class="fa fa-star" aria-hidden="true"></i>
							<i class="fa fa-star" aria-hidden="true"></i>
							<i class="fa fa-star" aria-hidden="true"></i>
							<i class="fa fa-star" aria-hidden="true"></i>
							<i class="fa fa-star" aria-hidden="true"></i>
							<span class="home-reviews-title">
								5 reviews
							</span>
						</li>
					</ul>
				<% end %>
			</div> <!-- end card-description -->
		</div> <!-- end card -->
	</div> <!-- end col -->
<% end %>

