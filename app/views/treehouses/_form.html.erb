
<%= simple_form_for @treehouse do |f| %>
<%= f.input :name, placeholder: "Up In The Air Treehouse" %>
<%= f.input :category, :collection => ["Entire Place", "Private Room", "Shared Room"], selected: 1 %>	
<%= f.input :capacity, placeholder: "4 people" %>	
<%= f.input :address %>
<%= f.input :zip_code %>
<%= f.input :city %>
<%= f.input :country, priority: [ 'FR' ] %>	 
<%= f.input :bed_count, placeholder: "4 beds" %>
<%= f.input :tree_type, placeholder: "Oak tree" %>
<%= f.input :rate, placeholder: "$100/night" %>
<%= f.input :description, placeholder: "Come rock out in our green hippy paradise.", :as => :text  %>
<%= f.input :photos, as: :attachinary %>
<%= f.button :submit, class: "btn btn-primary full-width margin20", value: "Submit" %>
<% end %>

<%= content_for(:after_js) do %>
 <%= javascript_include_tag "https://maps.google.com/maps/api/js?libraries=places&key=#{ENV['GOOGLE_API_BROWSER_KEY']}" %>
<% end %>